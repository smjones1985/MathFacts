<Window x:Class="MathFacts.ConfigureWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MathFacts"
        mc:Ignorable="d"
        Title="ConfigureWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="inputNumberText" Height="23" Margin="321,153,329,0" TextWrapping="Wrap" VerticalAlignment="Top" Background="#FFDDEAF0" TextAlignment="Center"/>
        <Button x:Name="startButton" Content="Start" Margin="343,282,0,0" VerticalAlignment="Top" Click="StartButton_Click" HorizontalAlignment="Left" Width="89"/>
        <Label Content="Fact Number:" Margin="321,122,375,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="operationComboBox" HorizontalAlignment="Left" Margin="321,231,0,0" VerticalAlignment="Top" Width="142" SelectedIndex="0"/>
        <Label Content="Operation:&#xD;&#xA;" HorizontalAlignment="Left" Margin="321,200,0,0" VerticalAlignment="Top" Width="96" Height="26"/>
        <TextBox x:Name="nameText" HorizontalAlignment="Left" Height="23" Margin="321,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="142" Background="#FFDDEAF0"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="321,45,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
